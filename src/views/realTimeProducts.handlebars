<h1 class="titulo">Productos en tiempo real</h1>

<section class="grid-wrapper">
  <form id="prodForm" class="card form-card">
    <h2>Nuevo producto</h2>

    <div class="field">
      <label for="title">Título</label>
      <input id="title" name="title" placeholder="Título" required />
    </div>

    <div class="field">
      <label for="description">Descripción</label>
      <textarea
        id="description"
        name="description"
        rows="2"
        placeholder="Descripción"
        required
      ></textarea>
    </div>

    <div class="field">
      <label for="price">Precio</label>
      <input
        id="price"
        name="price"
        type="number"
        placeholder="Precio"
        required
      />
    </div>

    <div class="actions">
      <button type="submit">Agregar</button>
    </div>
  </form>

  <ul id="productsList" class="cards-container"></ul>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>